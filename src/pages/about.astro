---
// Import necessary components
import MainLayout from '@/layouts/MainLayout.astro'
import MainSection from '@components/ui/blocks/MainSection.astro'
import LeftSection from '@components/ui/blocks/LeftSection.astro'
import RightSection from '@components/ui/blocks/RightSection.astro'

// Import necessary images
import blueprints from '@images/blueprints-image.avif'
import personWorking from '@images/person-working.avif'
import constructionWorkers from '@images/construction-workers.avif'
import aerialView from '@images/aerial-view.avif'
import greenRoof from '@images/green-roof.jpg'
import roofReplacement from '@images/roof-replacement.jpg'
import solarProject from '@images/solar-project.jpg'
import commercialKitchen from '@images/commercial-kitchen.jpg'
import warehouseConstruction from '@images/warehouse-construction.jpg'
import { SITE } from '@data/constants'

interface Article {
  isRightSection: boolean
  title: string
  subTitle: string
  btnExists?: boolean
  btnTitle?: string
  btnURL?: string
  single?: boolean
  img?: any
  imgAlt?: string
  imgOne?: any
  imgOneAlt?: string
  imgTwo?: any
  imgTwoAlt?: string
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: 'Commercial Construction',
    subTitle: `
      <p>We have extensive experience in handling commercial works of all sizes. Our commercial services include:</p>
      <br/>
      <ul>
        <li><b>Office Buildings:</b> From small offices to large corporate headquarters, we deliver functional and stylish office spaces.</li>
        <br/>
        <li><b>Retail Spaces:</b> Fit out of retail locations</li>
        <br/>
        <li><b>Industrial Facilities:</b> Refurbishment of warehouses, factories, and distribution centres with a focus on durability and performance.</li>
        <br/>
        <li><b>Insurance Repairs:</b> We provide a full service refurbishment or new build to properties affected
by fire, flood or any other form of insured peril.</li>
      </ul>
    `,
    single: false,
    imgOne: blueprints,
    imgOneAlt: 'Blueprints and digital tablet with construction plans.',
    imgTwo: personWorking,
    imgTwoAlt: 'Person working in the office',
  },
  {
    isRightSection: false,
    title: 'Insurance Works',
    subTitle:
      'We provide a range of services to the Insurance industry ranging from whole property refurbishment after an insured event to repair services for specific losses. We provide this service to loss adjusters, local authorities and surveyors dealing with work of this nature.',
    img: roofReplacement,
    imgAlt: 'Office having its roof replaced',
  },
  {
    isRightSection: true,
    title: 'Project Management',
    subTitle: `
    <p>Our project management services ensure smooth coordination throughout the construction
    process. We handle:</p><br/>
    <ul>
    <li><b>Budgeting & Cost Planning:</b> Clear, upfront estimates to keep your project within
    budget.</li></br>
    <li><b>Scheduling:</b> Efficient programme management to ensure your project is completed on
    time.</li></br>
    <li><b>Subcontractor Coordination:</b> We manage and coordinate subcontractors to ensure
    high-quality work at every stage.</li></br>
    <li><b>Quality Assurance:</b> Our attention to detail ensures top-quality finishes throughout.</li>
    </ul>
    `,
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: 'Construction workers orchestrating a project',
    imgTwo: aerialView,
    imgTwoAlt: 'Aerial view of managed construction',
  },
  {
    isRightSection: false,
    title: 'Refurbishment',
    subTitle: `
    <p>If your property is in need of updating, we offer expert refurbishment services:</p><br/>
    <ul>
        <li><b>Structural Repairs:</b> Addressing foundational or structural issues to ensure your
    property is safe.</li></br>
        <li><b>Internal & External:</b> Enhancing both the inside and outside of your property for
    improved functionality and aesthetics.</li>
    </ul>
    `,
    img: warehouseConstruction,
    imgAlt: 'Construction site before and after',
  },
  {
    isRightSection: true,
    title: 'Green Building & Sustainability',
    subTitle:
      'As part of our commitment to the environment, we offer green building services focused on sustainability and energy efficiency.',
    single: false,
    imgOne: greenRoof,
    imgOneAlt: 'A modern eco-friendly green roof',
    imgTwo: solarProject,
    imgTwoAlt: 'Constructing a home with solar panels',
  },
  {
    isRightSection: false,
    title: 'Why Choose Us?',
    subTitle: `
      <ul>
        <li><b>Experienced Professionals:</b> Our team consists of skilled tradespeople with years of
experience in every aspect of construction.</li>
        <br/>
        <li><b>End-to-End Service:</b> We manage your entire project from start to finish, ensuring
seamless coordination between trades and contractors.</li>
        <br/>
        <li><b>Quality Guaranteed:</b> We pride ourselves on delivering top-notch craftsmanship and
using only the best materials.</li>
        <br/>
                <li><b>Timely & Budget Friendly:</b> We are committed to completing projects on time and
within budget without compromising quality.</li>
        <br/>
        <li><b>Customer Centred Approach:</b> Your satisfaction is our top priority, and we work
closely with you throughout the process.</li>
      </ul>
    `,
    img: commercialKitchen,
    imgAlt: 'A remodeled kitchen',
  },
]

const pageTitle: string = `Services | ${SITE.title}`
---

<MainLayout
  title={pageTitle}
  structuredData={{
    '@context': 'https://schema.org',
    '@type': 'WebPage',
    '@id': 'https://agoracontracts.com/about',
    url: 'https://agoracontracts.com/about',
    name: 'About | Agora Contracts',
    description:
      'Providing top-quality building services tailored to meet your needs.',
    isPartOf: {
      '@type': 'WebSite',
      url: 'https://agoracontracts.com',
      name: 'Agora Contracts',
      description:
        'Providing top-quality building services tailored to meet your needs.',
    },
    inLanguage: 'en-GB',
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title='About Us'
    subTitle='At Agora Contracts we provide top-quality building services tailored to meet your needs. Whether you are looking for insurance works or to undertake a commercial or industrial project, our expert team is ready to help. With years of experience, we pride ourselves on delivering exceptional results, on time and within budget.'
    btnExists={true}
    btnTitle='Contact Us'
    btnURL='/contact'
  />
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      )
    })
  }
</MainLayout>
