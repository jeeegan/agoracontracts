---
// Import necessary components
import MainLayout from '@/layouts/MainLayout.astro'
import MainSection from '@components/ui/blocks/MainSection.astro'
import LeftSection from '@components/ui/blocks/LeftSection.astro'
import RightSection from '@components/ui/blocks/RightSection.astro'

// Import necessary images
import publicSector from '@images/public-sector.jpg'
import { SITE } from '@data/constants'

interface Article {
  isRightSection: boolean
  title: string
  subTitle: string
  btnExists?: boolean
  btnTitle?: string
  btnURL?: string
  single?: boolean
  img?: any
  imgAlt?: string
  imgOne?: any
  imgOneAlt?: string
  imgTwo?: any
  imgTwoAlt?: string
}

const articles: Article[] = [
  {
    isRightSection: false,
    title: 'Why Choose Us?',
    subTitle: `
    <div class="dark:text-neutral-400">
      <ul>
        <li><b>Expertise:</b> With years of experience working with public sector clients, we
understand the complexities and specific requirements of work of this type.</li>
        <br/>
        <li><b>Quality & Compliance:</b> We adhere to the highest standards of quality, safety, and
regulatory compliance on every project we undertake.</li>
        <br/>
        <li><b>Sustainability:</b> Our team is committed to delivering eco-friendly, sustainable
construction solutions that protect the environment while benefiting the community.</li>
        <br/>
                <li><b>On-Time, On-Budget:</b> We have a proven track record of completing projects within
the designated timeframes and budget, ensuring minimal disruption to the public..</li>
        <br/>
        <li><b>Collaboration:</b> We work closely with architects, engineers, and other stakeholders to
ensure that each project meets the needs of the client and adheres to all regulatory
requirements.</li>
      </ul>
      </div>
    `,
    img: publicSector,
    imgAlt: 'A large public sector building under construction',
  },
]

const pageTitle: string = `Services | ${SITE.title}`
---

<MainLayout
  title={pageTitle}
  structuredData={{
    '@context': 'https://schema.org',
    '@type': 'WebPage',
    '@id': 'https://agoracontracts.com/public-sector',
    url: 'https://agoracontracts.com/public-sector',
    name: 'Public Sector | Agora Contracts',
    description:
      'Providing top-quality building services tailored to meet your needs.',
    isPartOf: {
      '@type': 'WebSite',
      url: 'https://agoracontracts.com',
      name: 'Agora Contracts',
      description:
        'Providing top-quality building services tailored to meet your needs.',
    },
    inLanguage: 'en-GB',
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title='Public Sector'
    subTitle=`<div class="flex flex-col gap-1 pb-4 dark:text-neutral-400"><p>At Agora Contracts we specialise in delivering high-quality construction services for public
sector projects. With years of experience working with local governments we are committed
to helping build a stronger, more sustainable future through our expert construction services.
We pride ourselves on delivering projects on time, within budget, and to the highest standards
of quality.</p>
<p><Our reputation is built on a foundation of integrity, safety, and accountability, and we work
tirelessly to ensure that every project meets the needs of our clients.</p>
<p>We provide a wide range of construction services tailored to meet the needs of public sector
clients. We have the expertise to handle the building and refurbishment of all types of public
sector buildings.</p>
<p>Our projects prioritise environmental impact. From energy-efficient building solutions to
sustainable construction practices, we are dedicated to reducing the environmental footprint
of each project.</p>
<p>We have successfully completed projects across a variety of sectors and continue to work
across the spectrum of the public sector.</p></div>`
    btnExists={true}
    btnTitle='Contact Us'
    btnURL='/contact'
  />
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      )
    })
  }
</MainLayout>
