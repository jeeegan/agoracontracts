---
// Import necessary components
import MainLayout from '@/layouts/MainLayout.astro'
import MainSection from '@components/ui/blocks/MainSection.astro'
import LeftSection from '@components/ui/blocks/LeftSection.astro'
import RightSection from '@components/ui/blocks/RightSection.astro'

// Import necessary images
import blueprints from '@images/blueprints-image.avif'
import personWorking from '@images/person-working.avif'
import constructionWorkers from '@images/construction-workers.avif'
import underConstruction from '@images/under-construction.avif'
import officeJoinery from '@images/office-joinery.jpg'
import commercialKitchen from '@images/commercial-kitchen.jpg'
import industrialPainting from '@images/industrial-painting.jpg'
import officeCladding from '@images/office-cladding.jpg'
import hvac from '@images/hvac.jpg'
import pipes from '@images/pipes.jpg'
import commercialBoiler from '@images/commercial-boiler.jpg'
import electricalBoard from '@images/electrical-board.jpg'
import warehouseConstruction from '@images/warehouse-construction.jpg'
import { SITE } from '@data/constants'

interface Article {
  isRightSection: boolean
  title: string
  subTitle: string
  btnExists?: boolean
  btnTitle?: string
  btnURL?: string
  single?: boolean
  img?: any
  imgAlt?: string
  imgOne?: any
  imgOneAlt?: string
  imgTwo?: any
  imgTwoAlt?: string
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: 'Refurbishment & New-Build',
    subTitle: `At Agora Contracts, we provide comprehensive all-trades construction services, handling
every aspect of your project with professionalism, skill, and expertise Whether you&#39;re
working on a public sector, commercial, or industrial project, we offer a range of services to
meet your needs.`,
    single: false,
    imgOne: blueprints,
    imgOneAlt: 'Blueprints and digital tablet with construction plans.',
    imgTwo: underConstruction,
    imgTwoAlt: 'A large building under construction',
  },
  {
    isRightSection: false,
    title: 'Electrical Services',
    subTitle: `From rewiring to lighting installations and upgrades, our approved electricians provide
reliable and safe electrical solutions for for our clients. We specialise in installing energy-
efficient systems, maintaining electrical safety standards, and ensuring that all work complies
with regulations.`,
    img: electricalBoard,
    imgAlt: 'An electrical board',
  },
  {
    isRightSection: true,
    title: 'Plumbing Services',
    subTitle: `Our plumbers are equipped to handle all plumbing needsâ€”from repairs and replacements to
installations and inspections. Whether it&#39;s fixing leaks, installing new fixtures, or updating old
systems, we provide quick, efficient, and reliable plumbing services that will keep your
property flowing smoothly.`,
    single: false,
    imgOne: pipes,
    imgOneAlt: 'Pipes in a building',
    imgTwo: commercialBoiler,
    imgTwoAlt: 'A gas boiler',
  },
  {
    isRightSection: false,
    title: 'Mechanical Services',
    subTitle: `We provide installation, maintenance, and repair of heating, ventilation, and air conditioning
systems. Our experts will ensure your HVAC system is energy-efficient and running at
optimal performance, saving you money and increasing comfort.`,
    single: false,
    img: hvac,
    imgAlt: 'A heating, ventilation, and air conditioning system',
  },
  {
    isRightSection: true,
    title: 'Roofing & Cladding Services',
    subTitle: `Whether you need a new roof, repairs, or maintenance, our roofing experts have you covered.
We specialize in a variety of roofing materials, including shingles, metal, and flat roofs,
offering long-lasting and durable solutions to protect your property from the elements.`,
    imgOne: warehouseConstruction,
    imgOneAlt: 'Construction site before and after',
    imgTwo: officeCladding,
    imgTwoAlt: 'A building with cladding',
  },
  {
    isRightSection: false,
    title: 'Masonary & Concrete',
    subTitle: `Our masonry and concrete services cover everything from brickwork and stone installation to
concrete foundations and slabs.`,
    single: false,
    img: constructionWorkers,
    imgAlt: 'Construction workers orchestrating a project',
  },
  {
    isRightSection: true,
    title: 'Civil Engineering',
    subTitle: `We provide services ranging from land clearing, grading, drainage, tarmac, excavation and
fencing.`,
    single: false,
    imgOne: blueprints,
    imgOneAlt: 'Blueprints and digital tablet with construction plans.',
    imgTwo: personWorking,
    imgTwoAlt: 'Person working in the office',
  },
  {
    isRightSection: false,
    title: 'Painting & Finishing',
    subTitle: `Our painting and finishing services help you add the perfect final touches to any project. We
offer internal and external painting, as well as finishes such as taping and plastering.`,
    img: industrialPainting,
    imgAlt: 'An industrial building facade being painted',
  },
  {
    isRightSection: true,
    title: 'Joinery',
    subTitle: `Our expert team provide everything from framing and structural work to finishes such as
doors, skirtings and kitchens.`,
    single: false,
    imgOne: officeJoinery,
    imgOneAlt: 'Interior shot of custom office joinery',
    imgTwo: commercialKitchen,
    imgTwoAlt: 'A recently remodeled commercial kitchen',
  },
  {
    isRightSection: false,
    title: 'Custom Solutions',
    subTitle: `We understand that every project is unique, which is why we offer tailored solutions to meet
your specific requirements. Whether you need specialised design, unique materials, or a
custom build, our team is here to assist.`,
    img: warehouseConstruction,
    imgAlt: 'Construction site before and after',
  },
]

const pageTitle: string = `Services | ${SITE.title}`
---

<MainLayout
  title={pageTitle}
  structuredData={{
    '@context': 'https://schema.org',
    '@type': 'WebPage',
    '@id': 'https://agoracontracts.com/services',
    url: 'https://agoracontracts.comservices',
    name: 'Services | Agora Contracts',
    description:
      'Providing top-quality building services tailored to meet your needs.',
    isPartOf: {
      '@type': 'WebSite',
      url: 'https://agoracontracts.com',
      name: 'Agora Contracts',
      description:
        'Providing top-quality building services tailored to meet your needs.',
    },
    inLanguage: 'en-GB',
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title='Our Services'
    subTitle="At Agora Contracts, we provide comprehensive all-trades construction services, handling every aspect of your project with professionalism, skill, and expertise Whether you're working on a public sector, commercial, or industrial project, we offer a range of services to meet your needs."
    btnExists={true}
    btnTitle='Contact Us'
    btnURL='/contact'
  />
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      )
    })
  }
</MainLayout>
